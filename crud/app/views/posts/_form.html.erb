    <%= form.label :description,  { class: "form-label"}, style: "display: block" %>
    <%= form.text_area :description, { class: "form-control"} %>
  </div>

  <div  class="col-sm-6">
    <%= form.label :image,  { class: "form-label"}, style: "display: block" %>
    <%= form.file_field :image, { class: "form-control"} %>
